name:                todomvc
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Dave Laing
maintainer:          dave.laing.80@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:    
    TodoMVC
  other-modules:
      TodoMVC.Types.TodoItem
    , TodoMVC.Types.Filter
    , TodoMVC.Header
    , TodoMVC.Main
    , TodoMVC.Item
    , TodoMVC.Footer
    , Util.Model
    , Util.Reflex
  if !impl(ghcjs -any)
    exposed-modules:   Util.Run
  build-depends:       
      base >= 4.9 && < 4.10
    , text >= 1.2 && < 1.3
    , mtl >= 2.2 && < 2.3
    , reflex >= 0.5 && < 0.6
    , reflex-dom-core >= 0.4 && < 0.5
    , lens
    , jsaddle
    , ghcjs-dom
  if !impl(ghcjs -any)
    build-depends:
        filepath >=1.4 && <1.5
      , directory >=1.3 && <1.4
      , containers >=0.5 && <0.6
      , jsaddle-warp
      , wai >= 3.2 && < 3.3
      , warp
      , wai-middleware-static
      , websockets
  hs-source-dirs:      src
  if impl(ghcjs -any)
    ghc-options:       -Wall -dedupe
    cpp-options:       -DGHCJS_BROWSER
  else
    ghc-options:       -Wall
  default-language:    Haskell2010
  

executable todomvc
  if !impl(ghcjs -any)
    buildable: False
  main-is:             Main.hs
  build-depends:       base >=4.9 && < 4.10
                     , reflex-dom-core >= 0.4 && < 0.5
                     , todomvc
  hs-source-dirs:      exe
  if impl(ghcjs -any)
    ghc-options:       -Wall -dedupe
    cpp-options:       -DGHCJS_BROWSER
  else
    ghc-options:       -Wall
  default-language:    Haskell2010
